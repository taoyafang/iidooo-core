<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iidooo.core.dao.extend.SecurityResDao" >
  <resultMap id="BaseResultMap" type="com.iidooo.core.dto.extend.SecurityResDto" >
    <id column="ResID" property="resID" jdbcType="INTEGER" />
    <result column="ParentID" property="parentID" jdbcType="INTEGER" />
    <result column="ResName" property="resName" jdbcType="VARCHAR" />
    <result column="ResURL" property="resURL" jdbcType="VARCHAR" />
    <result column="Sequence" property="sequence" jdbcType="INTEGER" />
    <result column="Invisible" property="invisible" jdbcType="INTEGER" />
    <result column="Remarks" property="remarks" jdbcType="VARCHAR" />
    <result column="CreateTime" property="createTime" jdbcType="VARCHAR" />
    <result column="CreateUser" property="createUser" jdbcType="INTEGER" />
    <result column="UpdateTime" property="updateTime" jdbcType="VARCHAR" />
    <result column="UpdateUser" property="updateUser" jdbcType="INTEGER" />
    <result column="IsDelete" property="isDelete" jdbcType="INTEGER" />
    <result column="Version" property="version" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    ResID, ParentID, ResName, ResURL, Sequence, Invisible, Remarks, CreateTime, CreateUser, 
    UpdateTime, UpdateUser, IsDelete, Version
  </sql>
  <select id="selectAll" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from CORE_SECURITY_RES R
    where R.IsDelete = 0 order by R.Sequence asc
  </select>
  
  <select id="selectResourceListByRoles" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from CORE_SECURITY_RES R
    join 
  	(select RR.ResID
  	from CORE_SECURITY_ROLE_RES RR
  	where RR.IsDelete = 0 and RR.RoleID in 
  	<foreach item="item" index="index" collection="list" open="(" separator="," close=")">#{item.roleID}</foreach>
  	) RR
  	on R.ResID = RR.ResID and R.IsDelete = 0
  </select>
</mapper>